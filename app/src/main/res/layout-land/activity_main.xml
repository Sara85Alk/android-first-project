<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.android.helloandroid.MainActivity">
    <!-- 1st Child Layout -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flight_crew2"
            android:scaleType="centerInside" />
    </RelativeLayout>
    <!-- 2nd Child Layout -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <TextView
            android:id="@+id/business_name"
            android:layout_width="150dp"
            android:layout_height="@dimen/common_size"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/khula_regular"
            android:text="@string/business_name"
            android:textSize="@dimen/title_size"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:paddingRight="@dimen/text_padding_right"
            android:gravity="end|center_vertical"
            android:layout_above="@id/phone_number"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/icon_business_name"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/common_size"
            android:src="@drawable/udacity"
            android:background="@color/colorPrimary"
            android:padding="@dimen/icon_padding"
            android:layout_toLeftOf="@id/business_name"
            android:layout_alignTop="@id/business_name"/>
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="200dp"
            android:layout_height="@dimen/common_size"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/khula_light"
            android:text="@string/phone_number"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorWhite"
            android:paddingRight="@dimen/text_padding_right"
            android:gravity="end|center_vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"/>
        <ImageView
            android:id="@+id/icon_phone_number"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/common_size"
            android:src="@drawable/ic_local_phone_black_24dp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/icon_padding"
            android:layout_toLeftOf="@id/phone_number"
            android:layout_alignTop="@id/phone_number"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="250dp"
            android:layout_height="@dimen/common_size"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/khula_light"
            android:text="@string/business_address"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorWhite"
            android:paddingRight="@dimen/text_padding_right"
            android:gravity="end|center_vertical"
            android:layout_below="@id/phone_number"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/icon_address"
            android:layout_width="@dimen/common_size"
            android:layout_height="@dimen/common_size"
            android:src="@drawable/ic_location_on_black_24dp"
            android:background="@color/colorPrimary"
            android:padding="@dimen/icon_padding"
            android:layout_toLeftOf="@id/address"
            android:layout_alignTop="@id/address"/>
    </RelativeLayout>
</LinearLayout>
